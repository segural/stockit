  <body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Include Header -->
      <%- include('../../partials/header.ejs') %>
      <!--header end-->

      <!--Include Sidebar-->
      <%- include('../../partials/sidebar.ejs') %>
      <!--sidebar end-->

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="header-icon">
            <i class="fa fa-user-plus"></i>
          </div>
          <div class="header-title">
            <h1>Alta de usuarios</h1>
            <small>Usuarios y roles</small>
          </div>
        </section>
        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-12 pinpin">
              <div class="card" id="lobicard-custom-control" data-sortable="true">
                <div class="card-header">
                  <div class="card-title custom_title">
                    <h4>Complete los datos de nuevo usuario y asigne sus roles</h4>
                  </div>
                </div>
                <div class="card-body">
                  <form action="/users" method="POST" enctype="multipart/form-data" id="form" novalidate>
                    <div class="row">
                      <div class="col-md-6">
                        <% if (locals.errors && errors.noUser) { %>
                        <p class="feedback"><%= errors.noUser.msg %></p>
                        <% } %>
                        <div class="row">
                          <div class="col-md-12 form-group">
                            <input type="email" name="email" placeholder="E-Mail" class="form-control" id="email" value="<%= locals.old && old.email %>" />
                            <% if (locals.errors && errors.email) { %>
                            <p class="feedback"><%= errors.email.msg %></p>
                            <% } %>
                          </div>
                          <div class="col-md-12 form-group">
                            <input type="text" name="firstName" placeholder="Nombre" class="form-control" id="FirstName" value="<%= locals.old && old.firstName %>" />
                            <% if (locals.errors && errors.firstName) { %>
                            <p class="feedback"><%= errors.firstName.msg %></p>
                            <% } %>
                          </div>
                          <div class="col-md-12 form-group">
                            <input type="text" name="lastName" placeholder="Apellido" class="form-control" id="LastName" value="<%= locals.old && old.lastName %>" />
                            <% if (locals.errors && errors.lastName) { %>
                            <p class="feedback"><%= errors.lastName.msg %></p>
                            <% } %>
                          </div>
                          <div class="col-md-12 form-group">
                            <input type="text" name="user" placeholder="Usuario" class="form-control" id="LastName" value="<%= locals.old && old.user %>" />
                            <% if (locals.errors && errors.user) { %>
                            <p class="feedback"><%= errors.user.msg %></p>
                            <% } %>
                          </div>
                          <div class="col-md-12 form-group">
                            <input type="password" name="password" placeholder="Contraseña" class="form-control" id="password" value="<%= locals.old && old.password %>" />
                            <% if (locals.errors && errors.password) { %>
                            <p class="feedback"><%= errors.password.msg %></p>
                            <% } %>
                          </div>
                          <div class="col-md-12 form-group">
                            <label class="control-label">Roles asociados</label>
                            <div class="col-md-9 form-group">
                              <select name="roles" multiple="multiple" class="multi-select" id="my_multi_select1">
                                <% for( role of roles ) { %>
                                <option value="<%=role.id %>" <% if (locals.old && old.roles.includes(role.id.toString())) { %> selected <% } %>> <%= role.name %></option>
                                <% } %>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-12 form-group">
                            <label class="control-label">Selecciona una foto de perfil:</label>
                            <input type="file" name="image" accept=".jpg" class="input-file" id="image" />
                            <% if (locals.errors && errors.image) { %>
                            <p class="feedback"><%= errors.image.msg %></p>
                            <% } %>
                          </div>
                          <div class="col-md-12 form-group">
                            <label for="changePass" class="control-label">Cambiar contraseña en el proximo logueo</label>
                            <input type="checkbox" name="changePass" value="true" checked />
                          </div>
                        </div>
                        <div class="col-md-12 form-group">
                          <button type="submit" class="btn btn-success btn-md">Enviar</button>
                          <a href="/users/list"><button type="button" class="btn btn-danger btn-md">Cancelar</button></a>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <!-- Include footer -->
      <%- include('../../partials/footer.ejs') %>
      <!-- footer end -->
    </div>
