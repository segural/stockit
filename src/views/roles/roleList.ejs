  <body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Include Header -->
      <%- include('../partials/header.ejs') %>
      <!--header end-->

      <!--Include Sidebar-->
      <%- include('../partials/sidebar.ejs') %>
      <!--sidebar end-->

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="header-icon">
            <i class="fa fa-id-badge"></i>
          </div>
          <div class="header-title">
            <h1>Roles</h1>
            <small>Lista de roles</small>
          </div>
        </section>
        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-lg-12">
              <div class="btn-group d-flex" role="group">
                <div class="buttonexport">
                  <a href="/roles/new" class="btn btn-add"><i class="fa fa-plus"></i> Nuevo rol</a>
                </div>
              </div>
              <div class="card" id="lobicard-custom-control" data-sortable="true">
                <div class="card-header">
                  <div class="card-title custom_title">
                    <h4>Detalles de los roles</h4>
                  </div>
                </div>
                <div class="card-body">
                  <!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->

                  <!-- ./Plugin content:powerpoint,txt,pdf,png,word,xl -->
                  <div class="table-responsive">
                    <table id="roleList" class="table table-bordered table-striped table-hover">
                      <thead class="back_table_color">
                        <tr class="info">
                          <th>Rol</th>
                          <th>Permisos asignados</th>
                          <th class="dt-center">Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( role of roles ) { %>
                        <tr>
                          <td><%= role.name %></td>
                          <td>
                            <% for (let i = 0; i < role.permissions.length; i++) { %>
                            <label class="label-custom label-default"><%= role.permissions[i].name %></label>
                            <% } %>
                          </td>
                          <td class="dt-center">
                            <a href="/roles/<%= role.id %>/edit">
                              <button class="btn btn-add btn-sm"><i class="fa fa-pencil"></i></button
                            ></a>
                            <a data-toggle="modal" href="#myModal-<%= role.id %>">
                              <button class="btn btn-danger btn-sm" type="button"><i class="fa fa-trash-o"></i></button>
                            </a>
                            <!-- Modal -->
                            <div class="modal fade" id="myModal-<%= role.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header modal-header-primary">
                                    <h4><i class="fa fa-trash m-r-5"></i> Confirmar la eliminación del rol</h4>
                                  </div>
                                  <div class="modal-body">
                                    <h6>Confirma la eliminación del rol <b><%= role.name %></b> ?</h6>
                                    <br />
                                    <h6>Esta acción no se puede deshacer.</h6>
                                    <br />
                                    <h6>El rol se eliminará de todos los usuarios a los que está asignado</h6>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                    <form action="/roles/<%= role.id %>?_method=DELETE" method="POST" id="form">
                                      <button type="submit" class="btn btn-danger btn-md">Eliminar</button>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- modal -->
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <!-- Include footer -->
      <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
    </div>
    <!-- ./wrapper -->
    <!-- Start Core Plugins
    ==========================================/===========================-->
    <!-- jQuery -->
    <script src="/assets/plugins/jQuery/jquery-1.12.4.min.js"></script>
    <!-- Bootstrap proper -->
    <script src="/assets/bootstrap/js/popper.min.js"></script>
