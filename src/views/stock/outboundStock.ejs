  <body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Include Header -->
      <%- include('../partials/header.ejs') %>
      <!--header end-->

      <!--Include Sidebar-->
      <%- include('../partials/sidebar.ejs') %>
      <!--sidebar end-->

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="header-icon">
            <i class="fa fa-user"></i>
          </div>
          <div class="header-title">
            <h1>Stock General</h1>
            <small>Movimientos de Stock</small>
          </div>
        </section>
        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-lg-12">
              <div class="card" id="lobicard-custom-control" data-sortable="true">
                <div class="card-header">
                  <div class="card-title custom_title">
                    <h4>Detalles de Movimientos de Stock Saliente</h4>
                  </div>
                </div>
                <div class="card-body">
                  <!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->

                  <!-- ./Plugin content:powerpoint,txt,pdf,png,word,xl -->
                  <div class="table-responsive">
                    <table id="userList" class="table table-bordered table-striped table-hover">
                      <thead class="back_table_color">
                        <tr class="info">
                          <th class="dt-center" hidden>Fecha</th>
                          <th class="dt-center">Fecha</th>
                          <th>Producto</th>
                          <th>Cantidad</th>
                          <th>Centro Atenci√≥n</th>
                          <th>Equipo - Sector</th>
                          <th class="dt-center">Orden de Compra</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (stock of stockout) {%>
                          <tr class="info1">
                            <td class="dt-center" hidden>
                              <%  let FechaOculta = new Date(stock.createdAt);FechaOculta = new Date(FechaOculta.getFullYear(),FechaOculta.getMonth(),FechaOculta.getDate()) %> 
                              <%= FechaOculta.toISOString() %>
                            </td>
                            <td class="dt-center"><%= Intl.DateTimeFormat('es-AR').format(new Date(stock.createdAt)) %></td>
                            <td><%= stock.product.description %></td>
                            <td><%= stock.quantity %></td>
                            <td><%= stock.branch %></td>
                            <td><%= stock.notes %></td>
                            <% if (stock.oc == null) {%>
                            <td class="dt-center">
                              <a data-toggle="modal" href="#addModal-<%= stock.id %>" style="margin-right: 10px;">
                              <button class="btn btn-add btn-sm"><i class="fa fa-plus"></i> </button>
                              </a>
                            </td>
                            <% } else {%>
                            <td class="dt-center"><%= stock.oc.number %></td>
                            <% } %>
                          </tr>
                          <!-- Modal to add ocs-->
                            <div class="modal fade" id="addModal-<%= stock.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                <div class="modal-header modal-header-primary">
                                  <h4><i class="fa fa-plus m-r-5"></i> Agregar Orden de Compra Generado</h4>
                                </div>
                                <br>
                                <form action="/stock/addoc/<%= stock.id %>" method="POST" id="form" class="main-form">
                                <div class="col-md-12 form-group">
                                  <label class="control-label">Nro. Orden de Compra</label>
                                  <input type="number" class="form-control" name="number" required />
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-success btn-md">Enviar</button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          <!-- end of modal to add ocs-->
                          <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <!-- Include footer -->
      <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
    </div>
