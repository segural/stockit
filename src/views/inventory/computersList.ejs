  <body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Include Header -->
      <%- include('../partials/header.ejs') %>
      <!--header end-->

      <!--Include Sidebar-->
      <%- include('../partials/sidebar.ejs') %>
      <!--sidebar end-->

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="header-icon">
            <i class="fa fa-user"></i>
          </div>
          <div class="header-title">
            <h1>Inventario</h1>
            <small>Listado de <%= type %></small>
          </div>
        </section>
        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-lg-12">
              <div class="btn-group d-flex" role="group">
                <div class="buttonexport">
                  <a href="/inventory/addcomputer">
                    <button class="btn btn-add btn-sm"><i class="fa fa-plus"></i> Agregar <%= type %></button>
                  </a>
                </div>
              </div>
              <div class="card" id="lobicard-custom-control" data-sortable="true">
                <div class="card-header">
                  <div class="card-title custom_title">
                    <h4>Detalles de las <%= type %></h4>
                  </div>
                </div>
                <div class="card-body">
                  <!-- Plugin content:powerpoint,txt,pdf,png,word,xl -->

                  <!-- ./Plugin content:powerpoint,txt,pdf,png,word,xl -->
                  <div class="table-responsive">
                    <table id="userList" class="table table-bordered table-striped table-hover">
                      <thead class="back_table_color">
                        <tr class="info">
                          <th class="dt-center">Nombre de equipo</th>
                          <th class="dt-center">Centro</th>
                          <th class="dt-center">Sector/Usuario</th>
                          <th class="dt-center">Propiedades del equipo</th>
                          <th class="dt-center">Num. serie</th>
                          <th class="dt-center">Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( computer of computers ) { %>
                        <tr>
                          <td class="dt-center"><%= computer.name %></td>
                          <td class="dt-center"><%= computer.branch %></td>
                          <td class="dt-center"><%= computer.sector %></td>
                          <td class="dt-center"><%= computer.properties %></td>
                          <td class="dt-center"><%= computer.serialnumber %></td>
                          <td class="dt-center">
                              <a data-toggle="modal" href="#editModal-<%= computer.id %>">
                                <button class="btn btn-add btn-sm"><i class="fa fa-pencil"></i></button>
                              </a>
                              <a data-toggle="modal" href="#disableModal-<%= computer.id %>">
                                <button class="btn btn-danger btn-sm" type="button"><i class="fa fa-trash-o"></i></button>
                              </a>
                            <!-- Modal to edit-->
                            <div class="modal fade" id="editModal-<%= computer.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header modal-header-primary">
                                    <h4><i class="fa fa-pencil m-r-5"></i> Editar <%= type %></h4>
                                  </div>
                                  <br>
                                  <form action="/inventory/editcomputer/<%= computer.id %>?_method=PUT" method="POST" id="form" class="main-form">
                                    <div class="col-md-12 form-group">
                                      <label class="control-label">Nombre</label>
                                      <input type="text" name="name" class="form-control" id="name" value="<%= computer.name %>" />
                                    </div>
                                    <div class="col-md-12 form-group">
                                      <label class="control-label">Centro</label>
                                      <select class="form-control" name="branch">
                                        <option value="<%= computer.branch %>" selected> <%= computer.branch %></option>
                                        <% for( branch of branchs ) { %>
                                          <% if (computer.branch != branch.name) {%>
                                          <option value="<%= branch.name %>"> <%= branch.name %></option>
                                        <% }} %>
                                      </select>
                                    </div>
                                    <div class="col-md-12 form-group">
                                      <label class="control-label">Sector / Usuario</label>
                                      <input type="text" name="sector" class="form-control" id="sector" value="<%= computer.sector %>" />
                                    </div>
                                    <div class="col-md-12 form-group">
                                      <label class="control-label">Propiedades</label>
                                      <input type="text" name="properties" class="form-control" id="properties" value="<%= computer.properties %>" />
                                    </div>
                                    <div class="col-md-12 form-group">
                                      <label class="control-label">Serial Number</label>
                                      <input type="text" name="serialnumber" class="form-control" id="serialnumber" value="<%= computer.serialnumber %>" />
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-success btn-md">Enviar</button>
                                      </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- end of modal to edit -->
                            <!-- Modal to disable product-->
                            <div class="modal fade" id="disableModal-<%= computer.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header modal-header-primary">
                                    <h4><i class="fa fa-trash m-r-5"></i> Pasar equipo a End Of Service</h4>
                                  </div>
                                  <div class="modal-body">
                                    <h6>Confirma pasar a EoS el equipo <b><%= computer.name %></b> ?</h6>
                                    <br>
                                    <h6>Esta acci√≥n no se puede deshacer.</h6>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                    <form action="/inventory/disablecomputer/<%= computer.id %>?_method=PUT" method="POST" id="form">
                                      <button type="submit" class="btn btn-danger btn-md">Pasar a EoS</button>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- end of modal to disable -->
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <!-- Include footer -->
      <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
    </div>
    <!-- ./wrapper -->
